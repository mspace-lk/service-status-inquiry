<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%date{yyyy:MM:dd HH:mm:ss:SSS} %-5level %thread %logger{1} [%X{trxId}] %msg %n
            </pattern>
        </encoder>
    </appender>

    <appender name="error-appender"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/hms/logs/service-status-inquiry/error.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/hms/logs/service-status-inquiry/error.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy:MM:dd HH:mm:ss:SSS} %-5level %thread %logger{1} [%X{trxId}] %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="debug-appender"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/hms/logs/service-status-inquiry/debug.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/hms/logs/service-status-inquiry/debug.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy:MM:dd HH:mm:ss:SSS} %-5level %thread %logger{1} [%X{trxId}] %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="info-appender"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/hms/logs/service-status-inquiry/info.log</file>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/hms/logs/service-status-inquiry/info.%d{yyyy-MM-dd}.log
            </fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy:MM:dd HH:mm:ss:SSS} %-5level %thread %logger{1} [%X{trxId}] %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="framework-logs-appender"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/hms/logs/service-status-inquiry/framework.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/hms/logs/service-status-inquiry/framework.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>15</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy:MM:dd HH:mm:ss:SSS} %-5level %thread %logger{1} [%X{trxId}] %msg %n
            </pattern>
        </encoder>
    </appender>

    <appender name="audit-log-appender"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/hms/logs/service-status-inquiry/auditlog.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/hms/logs/service-status-inquiry/auditlog.%d{yyyy-MM-dd_HH}.log
            </fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy:MM:dd HH:mm:ss:SSS}|%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.hibernate" level="ERROR" additivity="true">
        <appender-ref ref="framework-logs-appender"/>
    </logger>

    <logger name="org.springframework" level="DEBUG" additivity="true">
        <appender-ref ref="framework-logs-appender"/>
    </logger>

    <logger name="USER_AUDIT_LOG" level="TRACE" additivity="true">
        <appender-ref ref="audit-log-appender"/>
    </logger>

    <logger name="hms" level="TRACE" additivity="true">
        <appender-ref ref="debug-appender"/>
        <appender-ref ref="info-appender"/>
    </logger>

    <logger name="STAT_LOGGER" level="TRACE" additivity="true">
        <appender-ref ref="debug-appender"/>
        <appender-ref ref="info-appender"/>
    </logger>

    <logger name="CustomErrorTranslator" level="ERROR" additivity="true">
        <appender-ref ref="error-appender"/>
    </logger>

    <root level="ERROR">
        <appender-ref ref="framework-logs-appender"/>
    </root>
</configuration>